/* pages/songs/songs.wxss */
.songs-container{
  display: flex;
  flex-direction: column;
}
.songs-container-img{
  height: 500rpx;
  width: 100%;
}
.head-text{
  font-size: 38rpx;
  color: #666;
  margin: 10rpx 20rpx 10rpx;
}

.list-content{
  border-top: 2rpx solid #efefef;
  padding: 10rpx 0 10rpx 0;
}

.list-content image{
  width: 56rpx;
  height: 56rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.song-name{
  font-size: 36rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.song-intr{
  font-size: 32rpx;
  vertical-align: middle;
  margin-left: 20rpx;
  color: #666;
}
.album{
  float: right;
  font-size: 28rpx;
  margin-right: 20rpx;
  color: #666;
  padding: 10rpx;
}