/* pages/index/index.wxss */
page{
  height: 100%;
  background-color: #66cccc;
}
.index-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin: 160rpx 0;
}
.userName{
  font-size: 32rpx;
  font-weight: 700;
  margin: 100rpx;
}
.go-in{
  width: 220rpx;
  height: 80rpx;
  font-size: 36rpx;
  color: #000;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #ccffcc;
}
.auth-button{
  font-size: 32rpx;
  border: 1rpx solid #999;
  margin: 200rpx 0;
  background-color: #ccffcc;
}